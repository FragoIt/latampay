# ============================================
# LatamPay API - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string for Prisma
# Format: postgresql://user:password@host:port/database?schema=public
DATABASE_URL=postgresql://user:password@localhost:5432/latampay?schema=public

# Connection pool size for database connections
# Recommended: 10-20 for most applications
DATABASE_POOL_SIZE=10

# ============================================
# Blockchain Configuration
# ============================================
# Polygon Mainnet RPC endpoint
# You can use public RPCs or services like Alchemy, Infura, etc.
POLYGON_RPC_URL=https://polygon-rpc.com

# Polygon Mumbai Testnet RPC endpoint
# Used for testing and development
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# Private key of the deployer wallet (without 0x prefix)
# WARNING: Never commit this key to version control
# Use a dedicated wallet for deployments
PRIVATE_KEY_DEPLOYER=

# Smart Contract Addresses
# Gateway contract address on Polygon
CONTRACT_ADDRESS_GATEWAY=

# USDC token contract address on Polygon
CONTRACT_ADDRESS_USDC=0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174

# USDT token contract address on Polygon
CONTRACT_ADDRESS_USDT=0xc2132D05D31c914a87C6611C10748AEb04B58e8F

# ============================================
# Authentication Configuration
# ============================================
# Supabase project URL
# Get this from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous/public key
# Safe to expose in client-side code
SUPABASE_ANON_KEY=

# Supabase service role key
# WARNING: Keep this secret! Never expose in client-side code
# Has admin privileges, use only in server-side code
SUPABASE_SERVICE_KEY=

# JWT secret for signing and verifying tokens
# Generate a strong random string (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=

# ============================================
# Payment Processing
# ============================================
# Stripe secret key
# Get from: https://dashboard.stripe.com/apikeys
# Use test keys for development, live keys for production
STRIPE_SECRET_KEY=sk_test_...

# Stripe webhook secret for verifying webhook signatures
# Get from: https://dashboard.stripe.com/webhooks
# Each webhook endpoint has its own secret
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# External API Keys
# ============================================
# Alchemy API key for blockchain interactions
# Get from: https://www.alchemy.com/
ALCHEMY_API_KEY=

# CoinGecko API key for cryptocurrency price data
# Get from: https://www.coingecko.com/en/api
# Free tier available, but rate-limited
COINGECKO_API_KEY=

# ============================================
# Application Configuration
# ============================================
# Node environment: development, production, or test
NODE_ENV=development

# Port for the API server
# Default: 3001
PORT=3001

# Frontend application URL
# Used for CORS and redirects
# Development: http://localhost:3000
# Production: https://yourdomain.com
FRONTEND_URL=http://localhost:3000
